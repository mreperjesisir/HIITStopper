<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/frameLayout2"
        android:visibility="invisible"/>

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:padding="20dp"
        app:layout_constraintEnd_toStartOf="@id/frameLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <SeekBar
            android:id="@+id/seekbar_set"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:progressDrawable="@drawable/bg_custom_seekbar_set"
            android:rotation="270"
            android:thumb="@drawable/ic_thumb"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="8dp" />
    </FrameLayout>



    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:padding="20dp"
        app:layout_constraintEnd_toStartOf="@id/frameLayout3"
        app:layout_constraintStart_toEndOf="@+id/frameLayout1"
        app:layout_constraintTop_toTopOf="parent">

        <NumberPicker
            android:id="@+id/set_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/frameLayout2"
        app:layout_constraintTop_toTopOf="parent">

        <SeekBar
            android:id="@+id/seekbar_rest"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:progressDrawable="@drawable/bg_custom_seekbar_rest"
            android:rotation="270"
            android:thumb="@drawable/ic_thumb" />
    </FrameLayout>

    <Button
        android:id="@+id/button_start"
        android:layout_width="120dp"
        android:layout_height="72dp"
        android:text="Start"
        android:textSize="24sp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>